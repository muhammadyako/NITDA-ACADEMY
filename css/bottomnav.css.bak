
  @media screen and (min-width: 768px) {
  .sticky-bar-mobile {
    display: none !important;
  }
} 
.sticky-bar-mobile {
            position: fixed;
            bottom: 0;
            left: 0;
            right: 0;
            background-color: #004E2B;
			opacity: 0.8;
            display: flex;
            justify-content: space-around;
            align-items: center;
            padding: 5px;
            box-shadow: 0 -2px 5px rgba(0, 0, 0, 0.1);
            color: #fff;
        }

.icon {
            display: block;
            font-size: 16px;
            margin-bottom: -5px;
            text-align: center;
        }

.text {
            font-size: 12px;
			font-family: cursive;
        }
 .item img {
            width: 24px; /* Adjust the width as needed */
            height: 24px; /* Adjust the height as needed */
            margin-bottom: 5px;
}
.item a {
            text-decoration: none;
            color: #fff;
            display: block;
 }








  .sticky-bar-mobile {
    z-index: 9999999 !important;
}
  @media screen and (max-width:767px) {
  .item * {
    text-align: center !important;
    margin-left: auto;
    margin-right: auto;
}
  }
